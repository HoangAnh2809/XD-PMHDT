# Environment Variables Example
# Copy this file to .env and update with your own values

# Database Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=ev_maintenance

# pgAdmin Configuration  
PGADMIN_DEFAULT_EMAIL=your_email@domain.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# Application Secrets
SECRET_KEY=your-secret-key-minimum-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-for-token-signing

# Database URL (update with your credentials)
DATABASE_URL=postgresql://your_db_user:your_secure_password@postgres:5432/ev_maintenance

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Settings
CORS_ORIGINS=http://localhost:3000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# OpenAI API Configuration (for Chat Service AI Assistant)
# Get API key from: https://platform.openai.com/api-keys
# Optional - chat service will use fallback responses if not provided
OPENAI_API_KEY=sk-your-openai-api-key-here

# Payment Gateway (Optional)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret

